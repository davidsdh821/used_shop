<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.usedshop.post.dao.PostDAO">
 	<insert id="insertPost">
 		INSERT INTO
 			`post`
 			(
 				`userId`	
 				,`subject`
 				,`price`
 				,`delivery`
 				,`productStatus`
 				,`content`
 				,`createdAt`
 				,`updatedAt`
 			)
 		VALUES
 			(
 				#{userId}
 				,#{subject}
 				,#{price}
 				,#{delivery}
 				,#{productStatus}
 				,#{content}
 				,NOW()
 				,NOW()
 			) 		
 		
 	
 	</insert>

	<select id="selectPostId" parameterType="int" resultType="int">
		SELECT 
			`id`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
			ORDER BY `id` DESC LIMIT 1		
		
	
	</select>
	
	
	
	<select id="selectPostList" resultType="com.usedshop.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`subject`
 			,`price`
 			,`delivery`
 			,`productStatus`
 			,`content`
 			,`createdAt`
 			,`updatedAt`
		FROM
			`post`

	
	</select>

	<select id="selectPostById" resultType="com.usedshop.post.model.Post">
	
		SELECT
			`id`
			,`userId`
			,`subject`
 			,`price`
 			,`delivery`
 			,`productStatus`
 			,`content`
 			,`createdAt`
 			,`updatedAt`
		FROM
			`post`
		WHERE
			`id` = #{postId}	

	
	</select>
	
</mapper> 